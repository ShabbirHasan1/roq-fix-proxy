{
  "name": "Client",
  "type": "flags",
  "prefix": "client_",
  "values": [
    {
      "name": "listen_address",
      "type": "std::string",
      "validator": "roq::flags::validators::ListenAddress",
      "required": true,
      "description": "Listen address"
    },
    {
      "name": "comp_id",
      "type": "std::string",
      "required": true,
      "description": "Component name"
    },
    {
      "name": "auth_method",
      "type": "std::string",
      "description": "Authentication method: (empty), hmac_sha256, hmac_sha256_ts"
    },
    {
      "name": "logon_timeout",
      "type": "std::chrono::nanoseconds",
      "required": true,
      "default": "5s",
      "description": "Logon timeout"
    },
    {
      "name": "heartbeat_freq",
      "type": "std::chrono::nanoseconds",
      "required": true,
      "default": "30s",
      "description": "Heartbeat frequency"
    },
    {
      "name": "decode_buffer_size",
      "type": "uint32_t",
      "required": true,
      "default": 1048576,
      "description": "Decode buffer size"
    },
    {
      "name": "encode_buffer_size",
      "type": "uint32_t",
      "required": true,
      "default": 16777216,
      "description": "Encode buffer size"
    }
  ]
}
